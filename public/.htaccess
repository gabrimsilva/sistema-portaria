# Bloquear acesso direto a arquivos de upload MESMO no servidor PHP
RewriteEngine On

# Permitir acesso a fotos de profissionais, visitantes e prestadores
RewriteCond %{REQUEST_URI} !^/uploads/profissionais/.*\.(jpg|jpeg|png|gif|webp)$ [NC]
RewriteCond %{REQUEST_URI} !^/uploads/visitantes/.*\.(jpg|jpeg|png|gif|webp)$ [NC]
RewriteCond %{REQUEST_URI} !^/uploads/prestadores/.*\.(jpg|jpeg|png|gif|webp)$ [NC]
RewriteRule ^uploads/.*$ - [F,L]

# Bloquear arquivos sens√≠veis
<FilesMatch "\.(log|ini|conf|env)$">
    Require all denied
</FilesMatch>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Redirecionar todas as outras requisi√ß√µes para index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]